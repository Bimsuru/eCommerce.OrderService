{
  "Routes": [
    // orders routes
    {
      "UpstreamPathTemplate": "/gateway/orders",
      "DownstreamPathTemplate": "/api/v1/orders",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "8000"
        }
      ],

      "UpstreamHttpMethod": ["Get", "Post", "Options"],
      "UpstreamScheme": "http",
      "AddQueriesToRequest": {
        "productid": "{productid}",
        "orderDate": "{orderDate}",
        "userid": "{userid}"
      },
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "orders"
      }

    },
    {
      "UpstreamPathTemplate": "/gateway/orders/{id}",
      "DownstreamPathTemplate": "/api/v1/orders/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "8000"
        }
      ],

      "UpstreamHttpMethod": ["Get", "Put", "Delete", "Options"],
      "UpstreamScheme": "http",
      
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "orders"
      }
    },

    // products routes
    {
      "UpstreamPathTemplate": "/gateway/products",
      "DownstreamPathTemplate": "/api/v1/products",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "6000"
        }
      ],

      "UpstreamHttpMethod": ["Get", "Post", "Options"],
      "UpstreamScheme": "http",
      "AddQueriesToRequest": {
        "searchString": "{searchString}"
      },

      // add policies
      "RetryOptions":
      {
        "RetryCount": 3,
        "RetryOnServerError": true // 500 erros allowd retry 3 times
      },
    
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 10000,
        "TimeoutValue": 5000
      },

      // add ratelimit 
      "RateLimitOptions": {
        "Limit": 3,
        "Period": "1m",
        "PeriodTimespan": 30,
        "EnableRateLimiting": true,
        "ClientWhitelist": 
        [
          "client1", "client2"
        ],
        "ClientIdHeader": "client-id"
      },

      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "products"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/products/{id}",
      "DownstreamPathTemplate": "/api/v1/products/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "6000"
        }
      ],

      "UpstreamHttpMethod": ["Get", "Put", "Delete", "Options"],
      "UpstreamScheme": "http",

      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "products"
      }
    },

    // users routes
    {
      "UpstreamPathTemplate": "/gateway/users/{id}",
      "DownstreamPathTemplate": "/api/v1/users/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7050"
        }
      ],

      "UpstreamHttpMethod": ["Get", "Options"],
      "UpstreamScheme": "http",

      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "users"
      }
    },

    // auth routes
    {
      "UpstreamPathTemplate": "/gateway/auth/login",
      "DownstreamPathTemplate": "/api/v1/auth/login",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7050"
        }
      ],

      "UpstreamHttpMethod": ["Post", "Options"],
      "UpstreamScheme": "http",
      
      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "users"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/register",
      "DownstreamPathTemplate": "/api/v1/auth/register",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "7050"
        }
      ],

      "UpstreamHttpMethod": ["Post", "Options"],
      "UpstreamScheme": "http",

      "FileCacheOptions": {
        "TtlSeconds": 30,
        "Region": "users"
      }
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4000"
  }
}
